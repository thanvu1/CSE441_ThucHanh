<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TableLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1"
    android:background="#FFFFFFFF"
    android:padding="0dp">

    <!-- Tiêu đề -->
    <TableRow>
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chương trình tính chỉ số BMI"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFAA00"
            android:background="#FFFF99"
            android:gravity="center"
            android:padding="6dp"
            android:layout_span="2" />
    </TableRow>

    <!-- Nhập tên -->
    <TableRow
        android:id="@+id/tableRow1">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập Tên:"
            android:textSize="17sp"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/edtten"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@android:drawable/edit_text"
            android:inputType="textPersonName"
            android:singleLine="true"
            android:paddingLeft="6dp"
            android:textSize="16sp" />
    </TableRow>

    <!-- Chiều Cao -->
    <TableRow
        android:id="@+id/tableRow2">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chiều Cao:"
            android:textSize="17sp"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/edtchieucao"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@android:drawable/edit_text"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:paddingLeft="6dp"
            android:textSize="16sp" />
    </TableRow>

    <!-- Cân Nặng -->
    <TableRow
        android:id="@+id/tableRow3">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cân Nặng:"
            android:textSize="17sp"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/edtcannang"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@android:drawable/edit_text"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:paddingLeft="6dp"
            android:textSize="16sp" />
    </TableRow>

    <!-- Nút Tính BMI -->
    <TableRow>
        <Button
            android:id="@+id/btnBMI"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Tính BMI"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_span="2"
            android:background="@android:drawable/btn_default"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"/>
    </TableRow>

    <!-- BMI -->
    <TableRow
        android:id="@+id/tableRow4">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BMI ="
            android:textSize="17sp"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/edtBMI"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@android:drawable/edit_text"
            android:inputType="numberDecimal"
            android:focusable="false"
            android:clickable="false"
            android:enabled="false"
            android:paddingLeft="6dp"
            android:textSize="16sp" />
    </TableRow>

    <!-- Chuẩn đoán -->
    <TableRow
        android:id="@+id/tableRow5">
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chuẩn đoán:"
            android:textSize="17sp"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/edtChuanDoan"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@android:drawable/edit_text"
            android:focusable="false"
            android:clickable="false"
            android:enabled="false"
            android:paddingLeft="6dp"
            android:textSize="16sp" />
    </TableRow>
</TableLayout>
