<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/white"
    android:padding="24dp"
    android:id="@+id/main">

    <!-- Tiêu đề nổi bật -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS Receiver"
        android:textColor="#FF0000"
        android:background="#24D7F7"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"/>

    <!-- Nhập số điện thoại cần theo dõi -->
    <EditText
        android:id="@+id/edtSourceNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số cần theo dõi (vd: 0988123123)"
        android:inputType="phone"
        android:layout_marginBottom="16dp"/>

    <!-- Nhập số điện thoại nhận chuyển tiếp -->
    <EditText
        android:id="@+id/edtTargetNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số chuyển tiếp (vd: 0988345678)"
        android:inputType="phone"
        android:layout_marginBottom="16dp"/>

    <!-- Nút bắt đầu theo dõi SMS -->
    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bắt đầu theo dõi SMS"
        android:layout_marginBottom="24dp"/>

    <!-- Trạng thái chức năng -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chưa kích hoạt"
        android:textColor="#222"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        android:gravity="center"/>

    <!-- Nội dung SMS nhận được -->
    <TextView
        android:id="@+id/tvSmsContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nội dung SMS sẽ hiển thị ở đây"
        android:textSize="16sp"
        android:textColor="#000000"
        android:background="#EEEEEE"
        android:padding="12dp"
        android:layout_marginTop="16dp"/>
</LinearLayout>
