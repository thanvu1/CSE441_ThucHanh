<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TableLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1"
    android:background="#FFFFFF"
    android:padding="0dp">

    <!-- Dòng tiêu đề -->
    <TableRow
        android:id="@+id/tableRow4"
        android:background="#138900">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chuyển đổi năm dương lịch"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:padding="8dp"
            android:layout_span="2" />
    </TableRow>

    <!-- Nhập năm dương lịch -->
    <TableRow
        android:id="@+id/tableRow1">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Năm dương lịch:"
            android:textSize="16sp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

        <EditText
            android:id="@+id/editnamduonglich"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="17sp"
            android:text="2013"
            android:paddingLeft="6dp"
            android:background="@android:drawable/edit_text" />
    </TableRow>

    <!-- Hàng nút chức năng -->
    <TableRow
        android:id="@+id/tableRow2">
        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Chuyển đổi"
            android:textSize="17sp"
            android:background="#DDDDDD"
            android:layout_marginRight="8dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonChangeUI"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Chuyển giao diện"
            android:textSize="17sp"
            android:background="#BBDEFB"
            android:textStyle="bold"/>
    </TableRow>

    <!-- Kết quả năm âm lịch -->
    <TableRow
        android:id="@+id/tableRow3">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Năm âm lịch:"
            android:textSize="16sp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quý tỵ."
            android:textColor="#FFD600"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="#FFFF00"
            android:paddingLeft="6dp"
            android:padding="2dp"/>
    </TableRow>
</TableLayout>
