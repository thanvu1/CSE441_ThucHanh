<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/capture_bg"
    android:gravity="center_horizontal"
    android:padding="0dp">

    <!-- App Bar/Toolbar (nếu có thể dùng trong Activity) -->
    <!-- Nếu muốn dùng Toolbar thì dùng thêm androidx.appcompat.widget.Toolbar -->

    <ImageView
        android:id="@+id/myimg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@string/img_desc"
        android:scaleType="centerCrop" /> <!-- Không cần android:src nếu dùng Picasso -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="36dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btncapture"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/btn_capture"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:padding="10dp"
            app:tint="@color/white"
            android:src="@android:drawable/ic_menu_camera" />
    </FrameLayout>
</LinearLayout>
